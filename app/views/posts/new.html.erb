<% if current_user %>
    <h1>New Post</h1>

    <%= render 'form', post: @post %>

    <%= link_to 'Back', posts_path %>
<% else %>
    <div class="container text-center mt-5">
        Please sign up or log in to post a question! <br>
        <%= link_to 'Sign up', new_user_registration_path, :class => "mt-3 mr-3 btn btn-outline-secondary" %>
    <%= link_to 'Sign in', new_user_session_path, :class => "mt-3 btn btn-outline-secondary" %>
    </div>
    
<% end %>
